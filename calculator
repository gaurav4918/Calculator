        <style>
    
                .flex-container {
                    display: flex;
                    height: 610px;
                    justify-content: center;
                    align-items: center;
                } 
        
                .calculator {
                    background-color: #28283e; 
                    padding: 30px;
                    border-radius: 20px;
                    box-shadow: 2px 0 2px 1px;
                    height: 350px;
                }
                
                #screen {
                    background-color: #ffffff;
                    height: 70px;
                    border-radius: 5px;
                    margin-top: -12px;
                }
    
                #displayedVal {
